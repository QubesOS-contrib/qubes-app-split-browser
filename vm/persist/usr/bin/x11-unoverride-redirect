#!/usr/bin/python
#
# Run given command; switch OverrideRedirect off on one new X11 window.
# Useful for working around https://github.com/QubesOS/qubes-issues/issues/2311
#
# Example: x11-unoverride-redirect dmenu -i

import sys
import subprocess

try:
  import xcffib as xcb
  import xcffib.xproto
except ImportError:
  import xcb
  import xcb.xproto

conn = xcb.connect()

conn.core.ChangeWindowAttributesChecked(
  conn.get_setup().roots[0].root,
  xcb.xproto.CW.EventMask,
  [xcb.xproto.EventMask.SubstructureNotify]
).check()

cmd = subprocess.Popen(sys.argv[1:], bufsize=0)

for ev in iter(conn.wait_for_event, None):
  if cmd.poll() != None:  # cmd finished
    break

  if isinstance(ev, xcb.xproto.CreateNotifyEvent) and ev.override_redirect:
    for cookie in [
      conn.core.ChangeWindowAttributesChecked(ev.window,
                                              xcb.xproto.CW.OverrideRedirect,
                                              [False]),
      conn.core.UnmapWindowChecked(ev.window),
      conn.core.MapWindowChecked(ev.window)
    ]: cookie.check()
    break

conn.disconnect()
cmd.wait()
status = cmd.returncode
if status < 0:
  status = 128 - status
exit(status)
