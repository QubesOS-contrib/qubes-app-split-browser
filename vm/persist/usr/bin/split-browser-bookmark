#!/bin/bash
set -e -o pipefail
shopt -s nullglob

for f in {,/usr/local}/etc/split-browser/persist/*.bash; do source "$f"; done


notify() {
    local summary=$1
    local body=$2$'\n\n'$3

    body=${body//&/&amp;}  # Yeah I don't like this either.
    body=${body//</&lt;}   # What kind of protocol doesn't allow
    body=${body//>/&gt;}   # clients to pass a string as plain text?

    notify-send --expire-time=4000 "$summary" "$body"
}


mkdir -p -- "$(dirname -- "$SB_BOOKMARK_FILE")"
touch -a -- "$SB_BOOKMARK_FILE"

case "$1" in
    get)
        [[ $# == 1 ]]

        export SB_BOOKMARK_PRETTY_DATE_LEN \
               SB_BOOKMARK_PRETTY_TITLE_LEN \
               SB_BOOKMARK_PRETTY_FS="  " \
               SB_BOOKMARK_PRETTY_PREFIX="$SB_STAR " \
               SB_BOOKMARK_PRETTY_TRUNC="$SB_ELLIPSIS"

        {
            echo  # select an empty line in dmenu initially
            split-browser-bookmark-pretty <"$SB_BOOKMARK_FILE"
        } |
        sb_dmenu -i -l 20 |
        split-browser-bookmark-pretty2url |
        grep --line-buffered . |
        while read -r url; do split-browser-cmd newtab "$url"; done
    ;;
    add)
        [[ $# == 3 ]]
        url=$2
        title=$3

        timestamp=$(date --rfc-3339=seconds)

        set -o noclobber
        >"$SB_BOOKMARK_FILE".tmp

        if old_title=$(grep -m 1 -F $'\t'"$url"$'\t' "$SB_BOOKMARK_FILE" |
                       cut -f 3); then
            rm -- "$SB_BOOKMARK_FILE".tmp
            notify 'Already bookmarked' "$url" "$old_title"
        else
            cp --reflink=auto -- "$SB_BOOKMARK_FILE" "$SB_BOOKMARK_FILE".tmp
            cat >>"$SB_BOOKMARK_FILE".tmp \
                <<<"$timestamp"$'\t'"$url"$'\t'"$title"
            mv -- "$SB_BOOKMARK_FILE".tmp "$SB_BOOKMARK_FILE"
            notify "$SB_STAR  Page bookmarked" "$url" "$title"
        fi
    ;;
esac
